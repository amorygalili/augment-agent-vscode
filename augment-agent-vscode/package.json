{
  "name": "coding-agent",
  "displayName": "Coding Agent",
  "description": "VSCode extension that integrates with augment-swebench-agent for AI-powered software engineering tasks",
  "version": "0.0.1",
  "publisher": "augment-code",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "agent",
    "swe-bench",
    "augment",
    "coding assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coding-agent.openChat",
        "title": "Open Coding Agent Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "coding-agent.clearHistory",
        "title": "Clear Chat History",
        "icon": "$(clear-all)"
      },
      {
        "command": "coding-agent.showLogs",
        "title": "Show Agent Logs",
        "icon": "$(output)"
      },
      {
        "command": "coding-agent.openSettings",
        "title": "Open Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coding-agent",
          "title": "Coding Agent",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "coding-agent": [
        {
          "id": "coding-agent.chatView",
          "name": "Agent Chat",
          "type": "webview"
        },
        {
          "id": "coding-agent.historyView",
          "name": "Prompt History",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "coding-agent.openSettings",
          "when": "view == coding-agent.chatView",
          "group": "overflow"
        },
        {
          "command": "coding-agent.clearHistory",
          "when": "view == coding-agent.chatView",
          "group": "overflow"
        },
        {
          "command": "coding-agent.showLogs",
          "when": "view == coding-agent.chatView",
          "group": "overflow"
        }
      ]
    },
    "configuration": {
      "title": "Coding Agent",
      "properties": {
        "coding-agent.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for GPT models",
          "scope": "application"
        },
        "coding-agent.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API Key for Claude models",
          "scope": "application"
        },
        "coding-agent.agentPath": {
          "type": "string",
          "default": "",
          "description": "Path to augment-swebench-agent CLI script (cli.py)",
          "scope": "workspace"
        },
        "coding-agent.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable for running the agent",
          "scope": "workspace"
        },
        "coding-agent.askPermission": {
          "type": "boolean",
          "default": true,
          "description": "Ask for permission before executing commands",
          "scope": "workspace"
        },
        "coding-agent.maxTurns": {
          "type": "number",
          "default": 200,
          "description": "Maximum number of conversation turns",
          "scope": "workspace"
        },
        "coding-agent.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable detailed logging",
          "scope": "workspace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
